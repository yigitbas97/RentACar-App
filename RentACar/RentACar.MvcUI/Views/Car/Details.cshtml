@model RentACar.MvcUI.Models.CarDetailsViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <br />
    <h2>Car Details</h2>
    <br />

    <table class="table table-striped table-responsive" style="text-align:center">
        <thead>
            <tr>
                <th scope="col">Plate Number</th>
                <th scope="col">Brand</th>
                <th scope="col">Model</th>
                <th scope="col">Type</th>
                <th scope="col">Gear Type</th>
                <th scope="col">Color</th>
                <th scope="col">Number of Seats</th>
                <th scope="col">Year</th>
                <th scope="col" colspan="2">Operations</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Car.PlateNumber</td>
                <td>@Model.Car.Brand</td>
                <td>@Model.Car.Model</td>
                <td>@Model.Car.Type</td>
                <td>@Model.Car.GearType</td>
                <td>@Model.Car.Color</td>
                <td>@Model.Car.NumberOfSeats</td>
                <td>@Model.Car.Year</td>
                <td><a class="btn btn-sm btn-warning" asp-action="Update" asp-route-carId="@Model.Car.Id">Update</a></td>
                <td><a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-carId="@Model.Car.Id">Delete</a></td>
            </tr>
        </tbody>
    </table>

    <br />
    <h3>Rented Car Records For Choosed Car</h3>
    <table class="table table-striped table-responsive" style="text-align:center">
        <thead>
            <tr>
                <th scope="col">Plate Number</th>
                <th scope="col">TC</th>
                <th scope="col">Start Date</th>
                <th scope="col">End Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model.Records)
            {
                <tr>
                    <td>@record.PlateNumber</td>
                    <td>@record.TC</td>
                    <td>@record.StartDate.ToString("dd.MM.yyyy")</td>
                    <td>@record.EndDate.ToString("dd.MM.yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>