@model RentACar.MvcUI.Models.CarListViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Car List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <h3>You can view, update ,delete car or add new car.</h3>
    <br />

    <a class="btn btn-success" asp-action="Add">Add New Car</a>
    <br /><br />
    <table class="table table-striped table-responsive" style="text-align:center">
        <thead>
            <tr>
                <th scope="col">Plate Number</th>
                <th scope="col">Brand</th>
                <th scope="col">Model</th>
                <th scope="col">Type</th>
                <th scope="col">Gear Type</th>
                <th scope="col">Color</th>
                <th scope="col">Number of Seats</th>
                <th scope="col">Year</th>
                <th scope="col" colspan="3">Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model.Cars)
            {
                <tr>
                    <td>@car.PlateNumber</td>
                    <td>@car.Brand</td>
                    <td>@car.Model</td>
                    <td>@car.Type</td>
                    <td>@car.GearType</td>
                    <td>@car.Color</td>
                    <td>@car.NumberOfSeats</td>
                    <td>@car.Year</td>
                    <td><a class="btn btn-sm btn-info" asp-action="Details" asp-route-carId="@car.Id">Details</a></td>
                    <td><a class="btn btn-sm btn-warning" asp-action="Update" asp-route-carId="@car.Id">Update</a></td>
                    <td><a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-carId="@car.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
