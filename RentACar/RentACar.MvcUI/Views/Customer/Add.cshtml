@model RentACar.MvcUI.Models.CustomerAddViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="container">
    <h3>Add New Customer</h3>
    <br />

    <form asp-controller="Customer" asp-action="Add" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.TC"></label>
                    <input asp-for="@Model.TC" class="form-control" />
                    <span asp-validation-for="@Model.TC"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Surname"></label>
                    <input asp-for="@Model.Surname" class="form-control" />
                    <span asp-validation-for="@Model.Surname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.BirthDate"></label>
                    <input type="date" asp-for="@Model.BirthDate" class="form-control" />
                    <span asp-validation-for="@Model.BirthDate"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Gender"></label>
                    <select class="form-control" asp-for="@Model.Gender" asp-items="@Model.GenderList"></select>
                    <span asp-validation-for="@Model.Gender"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.EMail"></label>
                    <input type="email" asp-for="@Model.EMail" class="form-control" />
                    <span asp-validation-for="@Model.EMail"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Address"></label>
                    <input asp-for="@Model.Address" class="form-control" />
                    <span asp-validation-for="@Model.Address"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.PhoneNumber"></label>
                    <input asp-for="@Model.PhoneNumber" class="form-control" />
                    <span asp-validation-for="@Model.PhoneNumber"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.PhoneNumber2"></label>
                    <input asp-for="@Model.PhoneNumber2" class="form-control" />
                    <span asp-validation-for="@Model.PhoneNumber2"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.DriverLicence"></label>
                    <select class="form-control" asp-for="@Model.DriverLicence" asp-items="@Model.DriverLicenceList"></select>
                    <span asp-validation-for="@Model.DriverLicence"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <input type="hidden" asp-for="@Model.User" />
            <input type="submit" class="btn btn-success btn-lg btn-block" value="Add New Customer" />
        </div>
    </form>
</div>
